@model DVTrack.Models.Article

@{
    ViewBag.Title = "Edit";
}
@section MyScripts {
    <script src="~/scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/editor.js"></script>
}
<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Article</legend>

        @Html.HiddenFor(model => model.ArticleId)

        <div class="editor-label">
            @Html.LabelFor(model => model.ExternalLink)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExternalLink)
            @Html.ValidationMessageFor(model => model.ExternalLink)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Headline)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Headline)
            @Html.ValidationMessageFor(model => model.Headline)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ArticleBody)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ArticleBody)
            @Html.ValidationMessageFor(model => model.ArticleBody)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
