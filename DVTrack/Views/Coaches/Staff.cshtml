@model IEnumerable<DVTrack.Models.Coach>

@{
    ViewBag.Title = "Staff";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            @ViewBag.Message
        </h3>
    </div>
    <div class="panel-body">
        <form runat="server">
            <div class="table-responsive">
                <section id="no-more-tables">
                    <table id="staffList" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Events</th>
                                <th>Position</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-toggle="modal" data-target="#@item.StaffId">

                                    @*<td>
                                        <div class="thumb" style="background-image: url('@item.PhotoSrc');" ></div>
                                    </td>*@
                                    <td data-title="Name">@Html.DisplayFor(modelItem => item.FullName)</td>
                                    <td data-title="Events">@Html.DisplayFor(modelItem => item.Event)</td>
                                    <td data-title="Position">@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td data-title="Email"><a href="mailto:@item.Email">@item.Email</a></td>
                                </tr>
                                @*<div class="modal fade" id="@item.StaffId" role="dialog">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                <h4 class="modal-title">About @item.FullName</h4>
                                            </div>
                                            <div class="modal-body">
                                                <p>@Html.Raw(item.Biography)</p>
                                                <h4>Contact Information</h4>

                                                <div>
                                                    Email: <a href="mailto:@item.Email">@item.Email</a>

                                                </div>
                                                <div>
                                                    Phone: @item.PhoneNumber

                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>*@
                            }
                        </tbody>
                    </table>
                </section>
            </div>
        </form>
    </div>
</div>
