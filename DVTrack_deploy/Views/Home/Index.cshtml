@{
    ViewBag.Title = "Home Page";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> @ViewBag.Message</h3>
    </div>

</div>
<div class="col-md-8">

    <div id="carousel" class="carousel slide" data-ride="carousel">

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            @*            <div class="item active">
                <img class="img-responsive center-block" src="~/Images/IMG_8135.jpg" />
            </div>

            <div class="item">
                <img class="img-responsive center-block" src="~/Images/IMG_8174.jpg" />
            </div>*@
            <div class="item active">
                <img class="img-responsive center-block" src="~/Images/MeetPics/_50A3278_web.jpg" />
            </div>


            @foreach (var imgPath in Directory.GetFiles(Server.MapPath("~/Images/MeetPics/"), "*.jpg"))
            {
                var img = new FileInfo(imgPath);
                <div class="item">
                    <img class="img-responsive center-block" src="@Url.Content(String.Format("~/Images/MeetPics/{0}", img.Name))" />
                </div>

            }
        </div>
    </div>
</div>
<div class="col-md-4">

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Arizona State Champions</h3>
        </div>
        <div class="panel-body">
            <em>Girls:</em> 2004, 1999<br />
            <em>Boys:</em> 2015, 2009, 2008, 2007
        </div>
        <div class="panel-heading">
            <h3 class="panel-title">State Runners-Up</h3>
        </div>
        <div class="panel-body">
            <em>Girls:</em> 2014, 2012, 2010, 2006, 2005<br />
            <em>Boys:</em> 2014, 2006, 2005
        </div>
    </div>
</div>
